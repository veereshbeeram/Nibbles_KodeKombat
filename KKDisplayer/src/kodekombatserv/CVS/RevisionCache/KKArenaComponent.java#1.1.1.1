package kodekombatserv;

import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.Image;
import javax.swing.JLabel;

/**
 *
 * @author Saish Kamat
 */

public class KKArenaComponent extends JLabel {
    Dimension size;
    int arr[][];
    Image cell[];

    public KKArenaComponent(int height,int width) {
        size=new Dimension(height,width);
        arr=new int[size.height][size.width];

        System.out.println(arr[0][0]);
    }

    @Override
    public void paint(Graphics g) {
        int hstep=this.getWidth()/size.width,vstep=this.getHeight()/size.height;

        for(int i=0;i<this.getHeight();i+=vstep)
            g.drawLine(0,i,this.getWidth(),i);

        for(int i=0;i<this.getWidth();i+=hstep)
            g.drawLine(i, 0, i, this.getHeight());
        
        g.drawRect(0, 0, this.getWidth()-1,this.getHeight()-1);
    }
}
